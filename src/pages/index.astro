---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Lauri Kihva - Front-End Engineer">
  <main class="flex flex-col justify-center">
    <div>
      <h1>Lauri Kihva</h1>
      <h2 class="text-center">🚧🛠️ Front-End Engineer</h2>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
    height: 100%;
  }
  h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 0.5em;
  }
  h2 {
    font-size: 1.5rem;
  }
</style>
